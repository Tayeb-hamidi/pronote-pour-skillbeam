# Core
APP_NAME=skillbeam
ENVIRONMENT=development

# Ports de la stack SkillBeam Wizard (evite les conflits avec d'autres stacks)
SKILLBEAM_HTTP_PORT=3784
SKILLBEAM_DASHBOARD_PORT=8086
SKILLBEAM_MINIO_PORT=9100
SKILLBEAM_MINIO_CONSOLE_PORT=9101

# Database / Queue
DATABASE_URL=postgresql+psycopg2://skillbeam:skillbeam@postgres:5432/skillbeam
REDIS_URL=redis://redis:6379/0

# Object Storage
S3_ENDPOINT_URL=http://minio:9000
S3_PUBLIC_ENDPOINT_URL=http://localhost:9100
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=skillbeam
S3_REGION=us-east-1
S3_SECURE=false

# Auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=120

# Service discovery
INGEST_SERVICE_URL=http://ingest:8000
GENERATE_SERVICE_URL=http://generate:8000
EXPORT_SERVICE_URL=http://export:8000

# Limits
MAX_UPLOAD_BYTES=209715200
RATE_LIMIT_PER_MINUTE=180

# AI providers (no hardcoded keys)
LLM_PROVIDER=mistral
OPENAI_API_KEY=
LOCAL_VLLM_BASE_URL=http://vllm:8000
MISTRAL_API_KEY=USUnJgfU8GOqdvxMMe18Lpx1K738i9bh
MISTRAL_BASE_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-medium-latest
REQUEST_TIMEOUT_SECONDS=120

# Source quality advanced
ENABLE_OCR_FALLBACK=false
OCR_LANGUAGE=fra+eng
ENABLE_TABLE_EXTRACTION_DEFAULT=true
ENABLE_SMART_CLEANING_DEFAULT=true
